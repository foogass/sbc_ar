<h2>записаться</h2>

	<script type="text/javascript">

		$(function() {
			//тут пишем Java-script код, который исполнится после загрузки страницы
			$('#datetimepicker').datetimepicker();

			});

	</script>

	<form action="/visit" method="POST" class="form-horizontal">
		<div class="form-group">
		    <label class="col-sm-2 control-label">Ваше имя</label>
		    <div class="col-sm-10">
		      <input name="client[name]" type="text" class="form-control" placeholder="name" value="<%= @c.name %>">
			</div>
		</div>

		<div class="form-group">
		    <label class="col-sm-2 control-label">Ваш телефон</label>
		    <div class="col-sm-10">
		      <input name="client[phone]" type="text" class="form-control" placeholder="phone" value="<%= @c.phone %>">
		    </div>
		</div>

		<div class="form-group">
		    <label class="col-sm-2 control-label">Когда вас ждать?</label>
		    <div class="col-sm-10">
		      <input id="datetimepicker" name="client[datestamp]" type="text" class="form-control" placeholder="date and time" value="<%= @c.datestamp %>">
		    </div>
		</div>

		<div class="form-group">
			<label class="col-sm-2 control-label">Выберите парикмахера: </label>
			<div class="col-sm-10">
				<select name="client[barber]" class="form-control">
					<% @barbers.each do |barber| %>
						<option <%= @c.barber == barber.name ? 'selected' : '' %>><%= barber.name %></option>
					<% end %>
				</select>
			</div>
		</div>

		<div class="form-group">
		    <div class="col-sm-offset-2 col-sm-10">
		      <button type="submit" class="btn btn-default">Записаться</button>
		    </div>
		</div>
	</form>